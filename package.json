{
  "name": "traits.js",
  "version": "1.1.2",
  "description": "traits.js is a minimal, standards-compliant trait composition library for Javascript.",
  "main": "dist/traits.js",
  "directories": {
    "test": "tests"
  },
  "files": [
    "dist/traits.min.js",
    "dist/traits.js",
    "src/traits.js"
  ],
  "scripts": {
    "test": "karma start karma.conf.js",
    "posttest": "codecov",
    "postinstall": "npm run build",
    "build": "rollup src/traits.js --output.file dist/traits.js --output.format umd --name Trait & rollup --config rollup.minify.config.js --output.file dist/traits.min.js --output.format umd --name Trait"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/traitsjs/traits.js.git"
  },
  "keywords": [
    "traits",
    "object",
    "composition",
    "OOP"
  ],
  "author": "Tom Van Cutsem",
  "maintainers": [
    "Jon Ege Ronnenberg <jon.ronnenberg+traits.js@gmail.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/traitsjs/traits.js/issues"
  },
  "homepage": "https://github.com/traitsjs/traits.js#readme",
  "devDependencies": {
    "codecov": "^3.0.0",
    "karma": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-qunit": "^1.2.1",
    "phantomjs-prebuilt": "^2.1.16",
    "qunitjs": "^2.4.1",
    "rollup": "^0.53.2",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-es": "^3.3.4"
  },
  "contributors": [
    "dotnetCarpenter",
    "Nathan Stott",
    "Mark S. Miller"
  ]
}
